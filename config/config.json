{
  "server": {
    "address": "0.0.0.0",
    "port": 8080,
    "threads": 4
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "etl_db",
    "username": "etl_user",
    "password": "etl_password",
    "type": "postgresql"
  },
  "auth": {
    "jwt_secret": "${JWT_SECRET}",
    "session_timeout": 3600
  },
  "etl": {
    "max_concurrent_jobs": 5,
    "job_timeout": 1800
  },
  "logging": {
    "level": "DEBUG",
    "format": "TEXT",
    "console_output": true,
    "file_output": true,
    "async_logging": false,
    "log_file": "logs/etlplus.log",
    "max_file_size": 10485760,
    "max_backup_files": 5,
    "enable_rotation": true,
    "component_filter": [],
    "include_metrics": false,
    "flush_interval": 1000,
    "structured_logging": {
      "enabled": true,
      "default_component": "etlplus",
      "aggregation": {
        "enabled": true,
        "destinations": [
          {
            "type": "FILE",
            "name": "aggregated_logs",
            "enabled": true,
            "file_path": "logs/aggregated.json",
            "rotate_files": true,
            "max_file_size": 104857600,
            "batch_size": 50,
            "batch_timeout": 30,
            "max_retries": 3,
            "retry_delay": 5,
            "allowed_levels": ["DEBUG", "INFO", "WARN", "ERROR", "FATAL"],
            "allowed_components": []
          },
          {
            "type": "ELASTICSEARCH",
            "name": "elasticsearch",
            "enabled": false,
            "endpoint": "http://localhost:9200",
            "index_pattern": "etlplus-logs-%Y.%m.%d",
            "pipeline": "",
            "auth_token": "",
            "headers": {
              "Authorization": "Bearer ${ELASTICSEARCH_TOKEN}"
            },
            "batch_size": 100,
            "batch_timeout": 30,
            "max_retries": 3,
            "retry_delay": 5,
            "allowed_levels": ["INFO", "WARN", "ERROR", "FATAL"],
            "allowed_components": []
          },
          {
            "type": "HTTP_ENDPOINT",
            "name": "logstash",
            "enabled": false,
            "endpoint": "http://localhost:8080/logstash",
            "auth_token": "",
            "headers": {
              "Content-Type": "application/json"
            },
            "batch_size": 50,
            "batch_timeout": 30,
            "max_retries": 3,
            "retry_delay": 5,
            "allowed_levels": ["INFO", "WARN", "ERROR", "FATAL"],
            "allowed_components": []
          }
        ]
      }
    }
  },
  "monitoring": {
    "websocket": {
      "enabled": true,
      "port": 8081,
      "max_connections": 100,
      "heartbeat_interval": 30,
      "message_queue_size": 1000
    },
    "job_tracking": {
      "progress_update_interval": 5,
      "log_streaming_enabled": true,
      "metrics_collection_enabled": true,
      "timeout_warning_threshold": 25
    },
    "notifications": {
      "enabled": true,
      "job_failure_alerts": true,
      "timeout_warnings": true,
      "resource_alerts": true,
      "retry_attempts": 3,
      "retry_delay": 5000,
      "memory_threshold": 0.85,
      "cpu_threshold": 0.90,
      "disk_threshold": 0.90,
      "email": {
        "smtp_server": "",
        "smtp_port": 587,
        "username": "",
        "password": "",
        "recipients": []
      },
      "webhook": {
        "url": "",
        "secret": "",
        "timeout": 30000
      },
      "slack": {
        "webhook_url": "",
        "channel": "#alerts"
      }
    }
  }
}
